<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/mainact_bg">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/backgroundpic"
            android:text="欢迎使用WeTest"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="32dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="Onclick2">
                <ImageView
                    android:id="@+id/img_15"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_15"
                    ></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_15"
                    android:text="          练习"
                    android:layout_centerHorizontal="true"
                    ></TextView>

            </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="32dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="mainOnClick2">
                    <ImageView
                        android:id="@+id/img_19"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_19"
                        ></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_19"
                        android:text="       知识图谱"
                        android:layout_centerHorizontal="true"
                        ></TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="32dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="mainOnClick3">
                    <ImageView
                        android:id="@+id/img_20"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_20"
                        ></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_20"
                        android:text="       我的"
                        android:layout_centerHorizontal="true"
                        ></TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="32dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_16"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/img_16"
                        ></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_16"
                        android:text="       问题反馈"
                        android:layout_centerHorizontal="true"
                        ></TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="相关资讯"
                android:textColor="#333"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="更多"
                android:textColor="#666" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/covertitle1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"></ImageView>
                <TextView
                    android:onClick="mainOnClick4"
                    android:layout_width="250dp"
                    android:layout_height="48dp"
                    android:text="中文医学知识图谱CMeKG2.0版发布"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@drawable/text"
                    android:gravity="center"
                    android:clickable="true"
                ></TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/covertitle2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"></ImageView>
                <TextView
                    android:onClick="mainOnClick5"
                    android:layout_width="250dp"
                    android:layout_height="48dp"
                    android:text="红楼梦人物关系知识图谱"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@drawable/text"
                    android:gravity="center"
                    android:clickable="true">
                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/covertitle3"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"></ImageView>
                <TextView
                    android:onClick="mainOnClick6"
                    android:layout_width="250dp"
                    android:layout_height="48dp"
                    android:text="天眼查重构商业知识图谱"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@drawable/text"
                    android:gravity="center"
                    android:clickable="true"
                ></TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/covertitle4"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"></ImageView>
                <TextView
                    android:onClick="mainOnClick7"
                    android:layout_width="250dp"
                    android:layout_height="48dp"
                    android:text="基于cnScheme的外国文学研究领域知识图谱"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@drawable/text"
                    android:gravity="center"
                    android:clickable="true"
                ></TextView>
                </LinearLayout>
            </ScrollView>

</LinearLayout>



