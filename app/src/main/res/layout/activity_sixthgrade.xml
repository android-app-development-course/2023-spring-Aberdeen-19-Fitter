<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageView
                android:onClick="sixOnclick1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/return_icon"
                android:layout_gravity="center"
                tools:ignore="SpeakableTextPresentCheck"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六、排序"
                android:textSize="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="105dp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            android:background="#ECEBEB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <Button
                    android:onClick="Onclick6_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button"
                    android:text="6.1 外排序和内排序"
                    android:textColor="@color/blue"></Button>

                <Button
                    android:onClick="Onclick6_2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button"
                    android:text="6.2 堆排序"
                    android:textColor="@color/blue"></Button>

                <Button
                    android:onClick="Onclick6_3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="6.3 快速排序"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button">
                </Button>

                <Button
                    android:onClick="Onclick6_4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="6.4 归并排序"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button">
                </Button>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>